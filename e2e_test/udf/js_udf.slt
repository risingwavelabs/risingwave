statement ok
create function gcd(a int, b int) returns int language javascript as $$
    // required before we support `RETURNS NULL ON NULL INPUT`
    if(a == null || b == null) {
        return null;
    }
    while (b != 0) {
        let t = b;
        b = a % b;
        a = t;
    }
    return a;
$$;

