create function async_key_values(kv varchar) returns table (key varchar, value varchar) language javascript as $$
export async function* async_key_values(kv) {
    if (!kv) {
        return;
    }
    const pairs = kv.split(',');
    for (const pair of pairs) {
        if (pair.includes('=')) {
            const [key, value] = pair.split('=', 2);
            yield {key, value};
        }
    }
}
$$ WITH (async = true);

query TT
select * from async_key_values('a=1,b=2,c=3');
----
a 1
b 2
c 3

