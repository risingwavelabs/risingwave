create table hubspot_sha256_v2 (
  data JSONB
) WITH (
  connector = 'webhook',
) VALIDATE SECRET test_secret AS secure_compare(
  headers->>'x-hubspot-signature',
  encode(
    sha256(
      convert_to(
        (test_secret || 'POST' || 'http://127.0.0.1:4560/webhook/dev/public/hubspot_sha256_v2' || convert_from(data, 'utf8'))
      , 'UTF8')
    ), 'hex')
);

