----
1

query I
select 1::INTEGER
----
1

query I
select 1::INT4
----
1

query I
select 1::SMALLINT
----
1

query I
select 1::INT2
----
1

query I
select 1::BIGINT
----
1

query I
select 1::INT8
----
1

query I
SELECT x::int4
FROM (VALUES (1::int2)) t(x);
----
1

