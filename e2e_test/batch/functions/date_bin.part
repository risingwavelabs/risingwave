query T
SELECT date_bin(
  '2 days'::interval,
  '2021-01-02 12:00:00+08'::TIMESTAMPTZ,
  '2021-01-01 00:00:00+00'::TIMESTAMPTZ
);
----
2021-01-01 00:00:00+00:00

query T
SELECT date_bin(
  '3 hours'::interval,
  '2021-01-01 05:45:00'::TIMESTAMP,
  '2021-01-01 00:00:00'::TIMESTAMP
);
----
2021-01-01 03:00:00

query T
SELECT date_bin(
