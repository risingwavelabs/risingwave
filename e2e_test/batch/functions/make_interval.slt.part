SET RW_IMPLICIT_FLUSH TO true;

# positive cases

# no arguments
query T
SELECT make_interval();
----
00:00:00

# year
query T
SELECT make_interval(1);
----
1 year

# month
query T
SELECT make_interval(0, 1);
----
1 mon

# week
query T
SELECT make_interval(0, 0, 1);
----
7 days

# day
query T
SELECT make_interval(0, 0, 0, 1);
----
1 day

# hour
query T
SELECT make_interval(0, 0, 0, 0, 1);
----
01:00:00

# minute
query T
SELECT make_interval(0, 0, 0, 0, 0, 1);
----
00:01:00

# second
query T
SELECT make_interval(0, 0, 0, 0, 0, 0, 1);
----
00:00:01

# rounds units to higher unit
query T
SELECT make_interval(0, 12);
----
1 year

query T
SELECT make_interval(1, 12);
----
2 years

